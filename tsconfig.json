{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "plugins": [
    {
      "name": "typescript-plugin-css-modules"
    }
  ],
  "include": ["src", "src/types/**/*.d.ts", "src/**/*.module.scss"]
}
